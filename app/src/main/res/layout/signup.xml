<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk">
    <TextView
        android:typeface="monospace"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/gray"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/signup_focus"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <LinearLayout
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="70dp"
        android:paddingRight="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">
            <EditText
                android:textColor="@color/gray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/signup_username"
                android:layout_width="245.5dp"
                android:layout_height="51.5dp"
                android:textCursorDrawable="@drawable/cursor_style"
                android:background="@drawable/signup_editbk_username" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <EditText
                android:textColor="@color/gray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/signup_password"
                android:layout_width="245.5dp"
                android:layout_height="51.5dp"
                android:textCursorDrawable="@drawable/cursor_style"
                android:background="@drawable/signup_editbk_password"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <EditText
                android:textColor="@color/gray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/signup_confirm"
                android:layout_width="245.5dp"
                android:layout_height="51.5dp"
                android:textCursorDrawable="@drawable/cursor_style"
                android:background="@drawable/signup_editbk_confirm"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <Button
                android:id="@+id/signup_bt_signup"
                android:layout_centerHorizontal="true"
                android:layout_width="245.5dp"
                android:layout_height="50dp"
                android:background="@drawable/signup_bt_signup"
                android:onClick="register"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/signup_bt_login"
                android:layout_width="245.5dp"
                android:layout_height="51.5dp"
                android:background="@drawable/signup_bt_login"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>